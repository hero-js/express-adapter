{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "target": "es2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": false,
    "baseUrl": ".",
    "removeComments": true,
    // "noUnusedLocals": true,
    "noLib": false,
    "declaration": true
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts"]
}
